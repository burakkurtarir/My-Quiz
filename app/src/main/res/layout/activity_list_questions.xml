<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListQuestionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <Button
            android:id="@+id/btnGetQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="getAllQuestions"
            android:text="GET QUESTIONS FROM FIREBASE" />


        <Button
            android:id="@+id/btnGetQuestionsFromLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="getAllQuestionsFromLocalDatabase"
            android:text="GET QUESTIONS FROM LOCAL" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>